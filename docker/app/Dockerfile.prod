FROM php:7.1-fpm

RUN apt-get update && apt-get install -y \
        libfreetype6-dev \
        libjpeg62-turbo-dev \
        libpng-dev

RUN docker-php-ext-install -j$(nproc) opcache zip

USER www-data

COPY --chown=www-data:www-data . /hakoniwa

WORKDIR /hakoniwa

RUN bin/composer install

VOLUME /hakoniwa/public
